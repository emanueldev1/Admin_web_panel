<%- include('header'); -%>


<style>

.playerinfo {
    /* display: flex; */
    padding: 3%;
    margin-top: 20px;
    margin-bottom: 15px;
    margin-left: 13px;
    margin-right: 13px;
    
    background-color: rgb(63, 63, 63);
    border-radius: 9px;
    min-width: 85%;
    min-height: 100%;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
}

span.cont {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(43, 43, 43);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;
    overflow:hidden;
    white-space:nowrap;
    padding-left: 9px;
}

span.cont:hover {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(57, 57, 57);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;
    overflow:hidden;
    white-space:nowrap;
}

input {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(43, 43, 43);
    border-radius: 8px;
    padding: 5px;
    transition: all 0.3s;

}

input:hover {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(49, 49, 49);
    border-radius: 8px;
    padding: 5px;
    transition: all 0.3s;

}

textarea {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(43, 43, 43);
    border-radius: 8px;
    padding: 5px;
    transition: all 0.3s;
    min-height: 80%;
    height: 80%;
    text-justify: auto;

}

textarea:hover {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(49, 49, 49);
    border-radius: 8px;
    padding: 5px;
    transition: all 0.3s;
    min-height: 80%;
    height: 80%;
    text-justify: auto;

}

select {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(43, 43, 43);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;

}

select:hover {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(51, 51, 51);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;

}

</style>

<div class="content">

    <% if(error !== false) { %>
        
        
    <center>
        <h1>SUCCESS</h1>
        <p>
            <%= error %>
        </p>
    </center>

    <% } else { %>

        <div class="playerinfo">

            <center><h2><%= data.name %> | Settings </h2></center>
            <hr>
            <form action="/panel/settings/save/<%= user.id %> " method="POST">
            <p>Administrators IDS:</p>
            <textarea cols="20" rows="10" name="admins"><%= admins %></textarea>
            <br>               
            <small>separate the administrators IDS whith spaces</small>
            <hr>
            <small>NOTES: pressing the button need restart the panel</small>
                <br>
            <button type="submit" class="btn btn-primary">Apply changes</button>

            </form>

        </div>

    <% } %>

</div>



<%- include('footer'); -%>
