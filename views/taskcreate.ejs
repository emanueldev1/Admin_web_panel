<%- include('header'); -%>


<style>
  .playerinfo {
    /* display: flex; */
    padding: 3%;
    margin-top: 20px;
    margin-bottom: 15px;
    margin-left: 13px;
    margin-right: 13px;

    background-color: rgb(63, 63, 63);
    border-radius: 9px;
    min-width: 85%;
    min-height: 100%;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
  }

  span.cont {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(43, 43, 43);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;
    overflow: hidden;
    white-space: nowrap;
    padding-left: 9px;
  }

  span.cont:hover {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(57, 57, 57);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;
    overflow: hidden;
    white-space: nowrap;
  }

  input {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(43, 43, 43);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;

  }

  input:hover {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(49, 49, 49);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;

  }

  select {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(43, 43, 43);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;

  }

  select:hover {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    background-color: rgb(51, 51, 51);
    border-radius: 8px;
    padding: 5px;
    margin-right: 10px;
    transition: all 0.3s;

  }
</style>

<div class="content">

  <% if(error !==false) { %>



    <h1>Error</h1>
    <p>
        <%= error %>
    </p>

  <% } else { %>

    <div class="playerinfo">

        <center>

            <h2>Create a category to uptload content.</h2>
        
        </center>
        
        <hr>

        <form action="/panel/task/create/<%= user.id %>" method="POST">
        
            <p>Title of category </p> <input type="text" name="title" placeholder="" value=""> <span class="cont">Max 70 </span>
            
            <p>Description of category</p> <input type="text" name="desc" placeholder="" value=""> <span class="cont">Max 150</span>
            
            <p>List or Category?</p>

            <select name="type" id="type">

                <option value="list">List</option>
                <option value="category">Task</option>

            </select>

            <hr>
            <br>

            <button id="submit" type="submit" class="btn btn-primary">Apply changes</button>

        </form>

    </div>
 <% } %>

  <br>

</div>


<%- include('footer'); -%>